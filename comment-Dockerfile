# Dockerfile
FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Thêm bash + dos2unix (khuyến nghị) để tránh CRLF
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    dos2unix \
    chromium \
    chromium-driver \
    xvfb \
    libnss3 \
    libxss1 \
    libasound2 \
    fonts-liberation \
    unzip \
    ca-certificates \
    curl \
    tini \
 && rm -rf /var/lib/apt/lists/*

ARG USER=app
ARG UID=1000
RUN useradd -m -u ${UID} ${USER} || true

WORKDIR /app

COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

ENV CHROME_BIN=/usr/bin/chromium \
    CHROMIUM_FLAGS="--no-sandbox --disable-dev-shm-usage --disable-gpu --headless=new"

COPY . /app

# Chuyển EOL về LF để tránh lỗi khi edit trên Windows
RUN dos2unix /app/comment-entrypoint.sh || true

RUN mkdir -p /app/database /app/logs/logs && chown -R ${USER}:${USER} /app
RUN chmod +x /app/comment-entrypoint.sh

USER ${USER}

ENTRYPOINT ["/usr/bin/tini", "--"]
# Gọi trực tiếp bằng bash để chắc chắn dùng bash, không phải /bin/sh
CMD ["/bin/bash", "/app/comment-entrypoint.sh"]
